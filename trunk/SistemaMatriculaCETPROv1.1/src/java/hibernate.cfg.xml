<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/matriculacetpro</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">limdli</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="hibernate.hbm2ddl.auto">validate</property>
    <mapping resource="com/matricula/model/ProgCurricular.hbm.xml"/>
    <mapping resource="com/matricula/model/Modulo.hbm.xml"/>
    <mapping resource="com/matricula/model/Profesor.hbm.xml"/>
    <mapping resource="com/matricula/model/Usuario.hbm.xml"/>
    <mapping resource="com/matricula/model/Dia.hbm.xml"/>
    <mapping resource="com/matricula/model/Grupo.hbm.xml"/>
    <mapping resource="com/matricula/model/Alumno.hbm.xml"/>
    <mapping resource="com/matricula/model/CurriculaAnual.hbm.xml"/>
    <mapping resource="com/matricula/model/Matricula.hbm.xml"/>
    <mapping resource="com/matricula/model/Turno.hbm.xml"/>
    <mapping resource="com/matricula/model/Especialidad.hbm.xml"/>
    <mapping resource="com/matricula/model/CapacidadTerminal.hbm.xml"/>
    <mapping resource="com/matricula/model/ResolucionDirectoral.hbm.xml"/>
    <mapping resource="com/matricula/model/GrupoDia.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
